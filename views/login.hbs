<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
 
  <link rel="stylesheet" type="text/css" href="/static/css/style.css" />
</head>
<body>

   {{>navbar data=details}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
 <div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <div class="guest-form-card card">
            <div class="card-header text-center">
                <h2>Login Here</h2>               
                    {{#if mymessages}}                 
                        <div class="alert alert-danger">{{mymessages}}</div> 
                    {{/if}} 
                    {{#if success_message}}                 
                        <div class="alert alert-success">{{success_message}}</div> 
                    {{/if}} 
                 </div>
            <div class="card-body">
                <form action={{posturl}} method="POST">
                    <div class="form-group">
                        <label for ="username">UserName</label>
                        {{#if username}}
                            <input id="username" class="form-control" name="username" value="{{username}}"/>
                        {{else}}
                            <input id="username" class="form-control" name="username" />
                        {{/if}}
                        <span class="invalid-feedback">UserName can't be blank.</span>
                    </div>

                    <div class="form-group">
                        <label for ="password">PassWord</label>
                         {{#if password}}
                            <input id="password" type="password" class="form-control" name="password" value="{{password}}"/>
                         {{else}}
                            <input id="password" type="password" class="form-control" name="password"  />
                         {{/if}}
                        <span class="invalid-feedback">Password can't be blank.</span>
                    </div>

                    <div class="form-group">
                         {{#if password}}
                            <input id="remember" type="checkbox"  name="remember" checked="true"/>
                         {{else}}
                            <input id="remember" type="checkbox"  name="remember" />
                         {{/if}}
                       
                        <label class="ml-1" for ="remember">Remember Me</label>                        
                    </div>
                    <input type="submit" class="btn btn-primary btn-block mt-1" value="Login"/>
                </form>
            </div>

        </div>
    </div>
</div>
{{>footer}}
</body>
</html>
